@model List<Bloggie.Web.Models.Domain.Tag>
@{
}

<style>
    .ancor {
        text-decoration : none;
        color : white
    }

    .ancor:hover{
            text-decoration: none;
            color: white
    }
</style>

<div class="bg-secondary bg-opacity-10 py-1">
    <div class="container">
        <h1> Show All Tags - Admin Functionality </h1>
    </div>
</div>

<div class="container" py-5>
    @if(Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                 <tr>
                   @*   <th>Id</th> *@
                    <th>Name</th>
                    <th>Display Name</th>
                   
                    <th>Edit</th>
                    <th>Delete</th>
                    
                 </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                       @*  <td>@item.Id</td> *@
                        <td>@item.Name</td>
                        <td>@item.DisplayName</td>

                        <td>
                            <button type="submit" class="btn btn-secondary">
                                <a class="ancor" asp-area="" asp-controller="AdminTag" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            </button>                        
                        </td>

                        <td>
                            <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="AdminTag" formmethod="post">
                                <a class="ancor" asp-area="" asp-controller="AdminTag" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Data Fount...!</p>

        <div style="margin-top:20px">

            </div>
    }

</div>
